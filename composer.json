{
    "name": "dlakomski/doctrine-dbal-bridge",
    "description": "Bridge for using SimpleBus with Doctrine DBAL",
    "keywords": [
        "Doctrine",
        "DBAL",
        "message bus",
        "command bus"
    ],
    "homepage": "http://github.com/SimpleBus/DoctrineDBALBridge",
    "license": "MIT",
    "authors": [
        {
            "name": "Jasper N. Brouwer",
            "email": "jasper@nerdsweide.nl"
        },
        {
            "name": "Ruud Kamphuis",
            "homepage": "https://github.com/ruudk"
        }
    ],
    "type": "library",
    "require": {
        "php": "^8.2",
        "dlakomski/message-bus": "^6.4",
        "doctrine/dbal": "^3.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.11",
        "phpunit/phpunit": "^11.5.46",
        "symfony/phpunit-bridge": "^6.4.23 || ^7.4"
    },
    "autoload": {
        "psr-4": {
            "SimpleBus\\DoctrineDBALBridge\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SimpleBus\\DoctrineDBALBridge\\Tests\\": "tests"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
